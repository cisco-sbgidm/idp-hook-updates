{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "stubs",
    "__mocks__"
  ]
}