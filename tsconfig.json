{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}